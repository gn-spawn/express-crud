extends layout

block header
  div.navbar
    div.menu-text メモ帳超特急

block content
  div
    h1.section= pageTitle
    a(href="/new").button.is-primary 新規作成
    div.container
      table.table
        thead
          tr
            th タイトル
            th 作成日
            th 更新日
            th
            th
        tbody
          each memo in memoItems
            tr
              td
                a.tag(href="/#{memo.id}") #{memo.title}
              td= memo.createdAt
              td= memo.updatedAt
              td
                a(href="/edit/#{memo.id}").button 編集
              td
                a(href="/delete/#{memo.id}").delete